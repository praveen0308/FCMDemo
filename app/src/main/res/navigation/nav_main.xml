<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.jmm.brsap.fcmdemo.ui.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_splashScreen_to_userActivity"
            app:destination="@id/userActivity" />
        <action
            android:id="@+id/action_splashScreen_to_vendorActivity"
            app:destination="@id/vendorActivity" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.jmm.brsap.fcmdemo.ui.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_vendorActivity"
            app:destination="@id/vendorActivity" />
        <action
            android:id="@+id/action_login_to_userActivity"
            app:destination="@id/userActivity" />
    </fragment>
    <activity
        android:id="@+id/vendorActivity"
        android:name="com.jmm.brsap.fcmdemo.ui.VendorActivity"
        android:label="activity_vendor"
        tools:layout="@layout/activity_vendor" />
    <activity
        android:id="@+id/userActivity"
        android:name="com.jmm.brsap.fcmdemo.ui.UserActivity"
        android:label="activity_user"
        tools:layout="@layout/activity_user" />
</navigation>